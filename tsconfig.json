{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./build",
    "typeRoots": [
      "./node_modules/@types/",
      "src/types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "configs",
    "configs/*.json",
    "utils",
    "src"
    ]
}
